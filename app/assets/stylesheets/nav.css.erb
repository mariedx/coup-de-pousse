#header-custom {
  width: 100%;
  height: 70vh;
  background-image: url(<%= asset_path 'index.png' %>);
  background-size: cover;
  background-position-y: 35%;
}

header {
  width: 100%;
  height: 90px;
  background-image: url(<%= asset_path 'index.png' %>);
  background-size: cover;
  background-position-y: 35%;
}

.content {
  width: 94%;
  margin: 4em auto;
  font-size: 20px;
  line-height: 30px;
  text-align: justify;
}

.logo {
  line-height: 60px;
  position: fixed;
  float: left;
  margin-left: 4%;
  color: #fff;
  font-weight: bold;
  font-size: 20px;
  letter-spacing: 2px;
}

header nav {
  position: fixed;
  width: 100%;
  line-height: 60px;
  z-index: 300;
}

header nav ul {
  line-height: 60px;
  list-style: none;
  background: rgba(0, 0, 0, 0);
  overflow: hidden;
  color: #fff;
  padding: 0;
  text-align: right;
  margin: 0;
  padding-right: 40px;
  transition: 1s;
}

header h2 {
  text-align: center;
  margin-top: 15%;
  font-weight: 550;
  margin-left: 25%;
  margin-right: 25%;
  color: #FFF;
  letter-spacing: .1rem;
  display: inline-block;
}

header .btn {
  text-align: center;
  font-weight: 600;
  color: #FFF;
  letter-spacing: .1rem;
  display: inline-block;
}

header .btn:hover {
  color: #217C71;
}

nav.black ul {
  background: #217C71;
}

header nav ul li {
  display: inline-block;
  padding: 16px 40px;;
}

header nav ul li a {
  text-decoration: none;
  color: #fff;
  font-size: 20px;
}

.menu-icon {
  line-height: 60px;
  width: 100%;
  background: #217C71;
  text-align: right;
  box-sizing: border-box;
  padding: 15px 24px;
  cursor: pointer;
  color: #fff;
  display: none;
}

@media(max-width: 786px) {
  .logo {
    position: fixed;
    top: 0;
    margin-top: 10px;
  }

  header nav ul {
    max-height: 0px;
    background: #217C71;
  }

  nav.black ul {
    background: #217C71;
  }

  .showing {
    max-height: 34em;
  }

  header nav ul li {
    box-sizing: border-box;
    width: 100%;
    padding: 24px;
    text-align: center;
  }

  .menu-icon {
    display: block;
  }

}
