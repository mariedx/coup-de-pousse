<h2>S'inscrire</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<center>
    <div class='container mb-3 mt-3'>

    <% if flash[:notice] %>
    <div class="alert alert-info"><%= flash[:notice] %></div>
    <% end %>

      <h2 class="text-success">S'inscrire</h2>
      <div class= "mb-3 mt-3  shadow p-3 mb-5 bg-white rounded">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>


          <div class ="form-group">
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <div class ="form-group">
            <div class="field">
              <%= f.label :password, "Mot de passe"%>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "Nouveau mot de passe" %>
            </div>
          </div>

          <div class ="form-group">
            <div class="field">
              <%= f.label :password_confirmation, "Confirmation mot de passe"%><br />
              <%= f.password_field :password_confirmation, autocomplete: "Nouveau mot de passe" %>
            </div>
          </div>

          <div class="actions">
            <button type="submit" class="btn btn-success">S'inscrire</button>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>



</center>
