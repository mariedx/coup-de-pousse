<div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <br><br><br>
        <h2 class="hh3 mb-3 font-weight-normal text-center text-success">Mot de passe oubliÃ© ?</h2>
        <div class= "mb-3 mt-3  shadow p-3 mb-5 bg-white rounded">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "Votre adresse mail", class: "form-control" %>
            </div>

            <div class="actions mt-3">
              <%= f.submit "Recevoir le lien de modification", class: "btn btn-success" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>