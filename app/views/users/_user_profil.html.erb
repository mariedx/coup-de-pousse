<div class="container bg-light-primary text-center my-5">
  <br>
  <h2>Profil<h2>

  <!-- avatar-->
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar, alt: 'avatar', id: 'profile_picture', class: 'avatar' %>
  <% else %>
    <img class="avatar" src="https://images.assetsdelivery.com/compings_v2/thesomeday123/thesomeday1231709/thesomeday123170900021.jpg">
  <% end %>

  <!--infos-->
  <div class="card-body">
    <h6 class="font-weight-light">Pr√©nom : <p class="text-primary"><% if @user.first_name != nil%> <%= @user.first_name%></p> <% end%>
    <h6 class="font-weight-light">Nom : <p class="text-primary"><% if @user.last_name != nil%> <%= @user.last_name%></p> <% end%>
    <h6 class="font-weight-light">Description : <p class="text-primary"><% if @user.description != nil%> <%= @user.description%></p> <% end%>
    <h6 class="font-weight-light">Outils : <p class="text-primary"><% if @user.tools != nil%> <%= @user.tools%></p> <% end%>
    <h6 class="font-weight-light">Email : <p class="text-primary"><%= @user.email %></p>
  </div>

  <p class="lead"><%= link_to 'Contacter', new_user_chat_room_path(@user.id), class: 'btn btn-outline-success' %></p>
  <br>
</div>