<% if current_user.id != @user.id %>
  <!--Profil of an user-->
  <%= render partial: 'user_profil'%>

<% else %>
  <!--Current_user dashboard-->
  <div class="container">
    <nav class="nav nav-tabs mt-3">
    <a class="nav-item nav-link active" href="#p1" data-toggle="tab">Mon profil</a>
    <a class="nav-item nav-link" href="#p2" data-toggle="tab">Mes annonces</a>
    <a class="nav-item nav-link" href="#p3" data-toggle="tab">Mes rendez-vous</a>
    <a class="nav-item nav-link" href="#p4" data-toggle="tab">Mes favoris</a>
    <a class="nav-item nav-link" href="#p5" data-toggle="tab">Mes messages</a>
    </nav>

    <div class="tab-content">
      <!--Profil-->
      <div class="tab-pane fade show active" id="p1">
      <%= render partial: 'current_user_profil'%>
      </div>
      <!--Ad-->
      <div class="tab-pane fade" id="p2">
      <%= render partial: 'ad'%>
      </div>
      <!--Appointments-->
      <div class="tab-pane fade" id="p3">
      <%= render partial: 'appointment'%>
      </div>
      <!--Favorite gardens-->
      <div class="tab-pane fade" id="p4">
      <%= render partial: 'favorite'%>
      </div>
      <!--Messages-->
      <div class="tab-pane fade" id="p5">
      <%= render partial: 'chat_room'%>

      </div>
    </div>
  </div>

<% end %>