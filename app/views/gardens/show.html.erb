<div class="container text-center mt-5 mb-5">
  <h5 class="mb-5"> <%= @garden.title %> </h5>

  <!--Show garden -->
  <div class="row row-top">
    <div class="col-md-6">
      <!-- Picture -->
      <div class="flat-content">
        <div id="carouselExampleControls" class="carousel slide img-fluid picture-show" data-ride="carousel">
          <div class="carousel-inner">
           <%if @garden.pictures.attached?%>
            <% @garden.pictures.each_with_index do |picture, index| %>
              <div class="carousel-item <%= "active" if index == 0%>">
                <%= image_tag picture, alt: 'picture', class: 'picture-garden-show' %>
              </div>
            <% end %>
          <%else%>
            <img class="img-fluid picture-garden-show" src="https://images.unsplash.com/photo-1438109382753-8368e7e1e7cf?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80">
          <%end%>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
    
    <div class="col-md-6 text-left mt-2">
      <h5>Description :</h5>
      <h6><%= @garden.description %></h6><br>
      <p>Surface : <%= @garden.surface %></p>
      <p>Orientation : <%= @garden.orientation %></p>
      <p>Type de sol : <%= @garden.floor_type %></p>
      <p>Outils disponibles : <% if @garden.tools_available %> <%= "Oui" %> <% else %> <%= "Non" %> <% end %></p>
      <p>Parking : <% if @garden.parking %> <%= "Possibilit√© de se garer" %> <% else %> <%= "Pas d'emplacement pour se garer" %> <% end %></p>
    
      <!-- LIKE / UNLIKE -->
      <% if current_user %>
        <p class="my-2"><%= @garden.favorites.count %> <%= (@garden.favorites.count) == 1 ? 'Like' : 'Likes'%></p>
        <% pre_favorite = @garden.favorites.find { |favorite| favorite.user_id == current_user.id} %>
        <% if pre_favorite %>
          <%= button_to 'üëé', garden_favorite_path(@garden, pre_favorite), method: :delete %>
        <% else %>
          <%= button_to 'üëç', garden_favorites_path(@garden), :method => 'POST' %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!--Contact host -->
  <div class="mt-5">
    <hr>
    <% if current_user != nil%>
    <%= link_to "Demander un rendez-vous", new_garden_appointment_path((params[:garden_id] = @garden.id), params[:id]), class: "btn btn-outline-success"%>
      <% else %>
      <p>Envie de prendre un rendez-vous ?
        <%=link_to "Je me connecte", new_garden_appointment_path((params[:garden_id] = @garden.id), params[:id])%>
      </p>
    <%end%>
    <a href="<%= user_path(@user.id) %>" class="btn btn-outline-primary">Profil propri√©taire</a>
    <a href="mailto:<%= @user.email %>" class="btn btn-outline-primary">Contacter le propri√©taire</a>
  </div>

</div>





