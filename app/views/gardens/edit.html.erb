<div class="container text-center mb-5">
  <br><br><br>
  <%= form_with model: @garden do |f| %>
    <h1 class="h3 mb-3 font-weight-normal text-success">Modifier mon annonce</h1>
    <div class= "mb-3 mt-3 shadow p-3 mb-5 bg-white rounded">

      <div class="row text-left">
        <!--column left-->
        <div class="col-lg-6">
          <div class="form-group">
            <%= f.label :title, "Titre" %><br>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description, "Description" %><br>
            <%= f.text_field :description, class: "form-control" %>
          </div>

          <div class="form-group">
              <%= f.label :street_number, "NÂ° de voie" %><br>
              <%= f.text_field :street_number, class: "form-control" %>
          </div>

          <div class="form-group">
              <%= f.label :street_name, "Voie" %><br>
              <%= f.text_field :street_name, class: "form-control" %>
          </div>

          <div class="form-group">
              <%= f.label :zip_code, "Code postal" %><br>
              <%= f.text_field :zip_code, class: "form-control" %>
          </div>

          <div class="form-group">
              <%= f.label :city, "Ville" %><br>
              <%= f.text_field :city, class: "form-control" %>
          </div>

          <div class="form-group">
              <%= f.label :country, "Pays" %><br>
              <%= f.text_field :country, class: "form-control" %>
          </div>
        </div>
        
        <!--column right-->
        <div class="col-lg-6">
          <div class="form-group">
            <%= f.label :orientation, "Orientation" %><br>
            <%= f.text_field :orientation, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :floor_type, "Type de sol" %><br>
            <%= f.text_field :floor_type, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :surface, "Surface" %><br>
            <%= f.text_field :surface, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :parking, "Parking" %>
            <%= f.check_box :parking, {}, true, false %>
          </div>

          <div class="form-group">
            <%= f.label :tools_available, "Outils disponibles" %>
            <%= f.check_box :tools_available, {}, true, false %>
          </div>

          <div class="form-group">
            <%= f.label :picture, "Ajouter une photo" %><br>
            <%= f.file_field :picture, accept: 'image/png,image/gif,image/jpeg'%>
          </div>

          <div class="actions mt-4">
            <%= f.submit "Publier", class: "btn  btn-success " %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
