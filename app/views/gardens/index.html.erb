<!-- Page Home Index -->
<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <!--Cards -->
      <div class="row">
       <% @gardens.each_with_index do |garden, i| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="#"><img class="card-img-top" src="<%= garden.image_url %>" class="cover" alt="" ></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="<%= "#" %>"><%= garden.title %></a>
                </h4>
                <h5><%= garden.surface %> m2</h5>
                <p class="card-text"><%= garden.description %></p>
                <%= link_to "En savoir plus", class: "btn btn-lg btn-block btn-outline-medium" %>
              </div>
              <div class="card-footer">
                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
