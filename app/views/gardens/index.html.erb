  <%= link_to "Messagerie", chat_rooms_path, class: "btn btn-outline-success"%>


 <!--Filter -->
  <h3>Rechercher par ville :</h3>
  <p>(Paris, Saint-Gervais ou La-Celle-Saint-Cloud, les pr√©curseurs &#128540;)</p>
  <div class = 'form-group'>
    <%= form_tag(gardens_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search])%>
    <%= submit_tag ("Rechercher"), class: "btn  btn-outline-primary " %>
    <% end %>
  </div>
  <br><br>

  <!--Cards -->
  <div class="row text-left">
    <% @gardens.each_with_index do |garden, i| %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column">

            <!-- Picture -->
            <div class="flat-content">
              <div id="carouselExampleControls" class="carousel slide img-fluid picture-show" data-ride="carousel">
                <div class="carousel-inner">
                <%if garden.pictures.attached?%>
                  <% garden.pictures.each_with_index do |picture, index| %>
                    <div class="carousel-item <%= "active" if index == 0%>">
                      <%= image_tag picture, alt: 'picture', class: 'picture-garden-index' %>
                    </div>
                  <% end %>
                <%else%>
                    <img class="img-fluid picture-garden-index" src="https://images.unsplash.com/photo-1438109382753-8368e7e1e7cf?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80">
                <%end%>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>

            <h4 class="card-title">
              <a href="<%= garden_path(garden) %>"><%= garden.title %></a>
            </h4>
            <h5><%= garden.surface %> m2</h5>
            <p class="card-text"><%= garden.description %></p>
            <div class="bottom-card mt-auto">
              <p class="card-text"><strong><%= garden.address.city %></strong></p>
              <div class="bottom-card-info">
                <%= link_to "En savoir plus", garden_path(garden), class: "btn btn-outline-success"%>
                <p class ="text-right mr-4"><%= garden.favorites.count %> <%= (garden.favorites.count) == 1 ? 'üëç' : 'üëç'%></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>