<div class="container mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @garden, multiple: true do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center text-success">Publier une annonce</h1>
        <div class= "mb-3 mt-3  shadow p-3 mb-5 bg-white rounded">
          <div class="form-group">
            <%= f.label :title, "Titre" %><br />
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description, "Description" %><br />
            <%= f.text_field :description, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :orientation, "Orientation" %><br />
            <%= f.text_field :orientation, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :floor_type, "Type de sol" %><br />
            <%= f.text_field :floor_type, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :is_available, "DisponibilitÃ©" %><br />
            <%= f.check_box :is_available, {}, true, false %>
          </div>

          <div class="form-group">
            <%= f.label :parking, "Parking" %><br />
            <%= f.check_box :parking, {}, true, false %>
          </div>

          <div class="form-group">
            <%= f.label :tools_available, "Outils disponibles" %><br />
            <%= f.check_box :tools_available, {}, true, false %>
          </div>

          <div class="form-group">
            <%= f.label :address_id, "Ville : tapez 1, 2 ou 3" %><br />
            <%= f.text_field :address_id, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :surface, "Surface" %><br />
            <%= f.text_field :surface, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :picture, "Ajouter une photo" %><br />
            <%= f.file_field :pictures, multiple: true, accept: 'image/png,image/gif,image/jpeg'%>
          </div>

          <div class="actions mt-4">
            <%= f.submit "Publier", class: "btn  btn-success " %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>