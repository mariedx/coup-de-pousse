<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
    <%= form_with(model: @garden, local: true) do |form| %>

      <div class="form-group">
        <%= form.label :title, "Titre de l'annonce" %><br />
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description, "Description" %><br />
        <%= form.text_field :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :orientation, "Orientation solaire de votre jardin" %><br />
        <%= form.text_field :orientation, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :floor_type, "Type de sol" %><br />
        <%= form.text_field :floor_type, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :is_available, "Disponibilité" %><br />
        <%= form.check_box :is_available, {}, true, false %> 
      </div>

      <div class="form-group">
        <%= form.label :parking, "Parking à disposition ?  " %> <br />
        <%= form.check_box :parking, {}, true, false %> 
      </div>

      <div class="form-group">
      <%= form.label :tools_available, "Outils disponibles ?" %><br />
      <%= form.check_box :tools_available, {}, true, false %> 
    </div>
    
    <div class="form-group">
      <%= form.label :surface, "Surface de jardinage :" %><br />
      <%= form.text_field :surface, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :address_id, "Ville (1: Paris, 2: La-Celle-Saint-Cloud ou 3: Saint-Gervais)" %><br />
      <%= form.text_field :address_id, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= form.label :image_url, "Images URL :" %><br />
      <%= form.text_field :image_url, class: "form-control" %>
    </div>

        <div class="actions mt-5">
        <%= form.submit "Créer mon annonce", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>