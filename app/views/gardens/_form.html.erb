<div>
  <h3>Ecris un commentaire</h3>
  <%= form_for [ @garden, Comment.new] do |f| %>
    <div class="form-group">
      <label>Commentaire</label>
      <%= f.text_area :content, class: 'form-control'%>
    </div>
    <div class="form-group d-flex">
      <button  class="btn btn-outline-info mx-auto" type="submit">Add Comment</button>
    </div>
  <% end %>
</div>