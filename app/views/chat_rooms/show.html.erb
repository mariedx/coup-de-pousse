<div class="container bg-light-primary my-5">
  <br>
  <h2 class="text-center"><%= @chat_room.title %></h2><br>

  <div class="border-chat border">
    <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
      <%= render @chat_room.messages %>
    </div>
  
    <hr>

    <%= form_for @message, url: '#' do |f| %>
      <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
      <div class="form-group">
        <%= f.label :body, "Votre message" %>
        <%= f.text_area :body, class: 'form-control' %>
      </div>

      <%= f.submit "Envoyer", class: 'btn btn-success btn-lg' %>
    <% end %>
  </div>

  <br>
</div>