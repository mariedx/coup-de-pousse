<h3>Ajouter l'objet de votre demande</h3>

  <%= form_with(model: [@user, @chat_room], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, "Titre" %>
    <%= form.text_field :title, autofocus: true, class: 'form-control' %>
  </div>

  <%= form.submit "C'est parti !", class: 'btn btn-primary' %>
<% end %>
