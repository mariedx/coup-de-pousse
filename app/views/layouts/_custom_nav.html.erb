<header id="header-custom">
  <nav>
      <div class="menu-icon">
        <i class="fa fa-bars fa-2x"></i>
      </div>
      <div class="logo">
        <%= link_to root_path do %>
          <%= image_tag "logoblanc.png", height: 100%>
        <% end %>
      </div>
      <div class="menu">
        <ul>
      <% if current_user == nil %>
        <li><a <%= link_to "Se connecter", new_user_session_path, :class => "nav-item nav-link" %></a></li>
        <li><a <%= link_to "S'inscrire", new_user_registration_path, :class => "nav-item nav-link" %></a></li>
      <% else %>
        <li><a <%= link_to "Mon profil", user_path(current_user), :class => "nav-item nav-link" %></a></li>
        <li><a <%= link_to "Se déconnecter", destroy_user_session_path, :class => "nav-item nav-link", :method => 'DELETE' %></a></a></li>
        <% end %>
        </ul>
      </div>
  </nav>

  <% if current_user != nil %>
    <h2 class="mb-3">Bonjour <%= current_user.first_name %> !
  <% end %>
    <br><br>
    Partagez la passion de la terre<br> grâce au cojardinage</h2>

</header>